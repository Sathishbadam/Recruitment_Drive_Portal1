@inherits LayoutComponentBase
@using MudBlazor
@inject NavigationManager Navigation


<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>

    <MudAppBar Elevation="4" Color="Color.Primary">
        <MudText Typo="Typo.h6" Class="ml-3">
            Recruitment Drive Portal
        </MudText>

        <MudSpacer />

        <MudButton Variant="Variant.Text"
                   Style="background-color:forestgreen; color: white; border-radius:black 5px"
                   OnClick="@(() => Navigation.NavigateTo("/panels"))">
            Panels
        </MudButton>

    </MudAppBar>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="mt-6">
            @Body
        </MudContainer>
    </MudMainContent>

</MudLayout>




